<div class="distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if section.settings.has_fullwidth == false %}
    <div class="container">
  {% endif %}
    {% if section.settings.heading != blank %}
      <div class="title_section {{ section.settings.title_alignment }}">
        <i class="fa fa-instagram align-middle color_default" aria-hidden="true"></i>
        <span class="title align-middle" style="color: {{ section.settings.heading_c }};">{{ section.settings.heading }}</span>
        {% if section.settings.subheading != blank %}
          <span class="sub_title" style="color: {{ section.settings.subheading_c }};">{{ section.settings.subheading }}</span>
        {% endif %}
      </div>
    {% endif %}
    <div class="block_content nov-slick-carousel"
    data-autoplay="false" 
    data-autoplayTimeout="6000" 
    data-loop="false"
    data-dots="{{ section.settings.show_dot }}" 
    data-nav="{{ section.settings.show_nav }}" 
    data-row="{{ section.settings.number_row }}" 
    data-row_mobile="{{ section.settings.row_mobile }}"
    data-items="{{ section.settings.grid_number }}" 
    data-items_lg="{{ section.settings.grid_number_lg }}" 
    data-items_md="{{ section.settings.grid_number_md }}" 
    data-items_sm="{{ section.settings.grid_number_sm }}"
    data-items_xs="{{ section.settings.grid_number_xs }}">
      {% for block in section.blocks %}
        <div class="card_gallery hover-image">
          <a href="{{ block.settings.image | img_url: '1200x' }}" class="d-block" data-fancybox="gallery">
            {% if block.settings.image != blank %}
              <img class="lazyload w-100" data-src="{{ block.settings.image | img_url: '600x600', crop: 'center' }}">
              <i class="fa fa-instagram" aria-hidden="true"></i>
            {% else %}
              {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
            {% endif %}
            
          </a>
        </div>
      {% endfor %}
    </div>
  {% if section.settings.has_fullwidth == false %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Gallery Instagram",
  "class": "index-section section-gallery-ins wow fadeInUp animated",
  "settings":[
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Vinova Gallery Instagram</p>"
    },
    {
      "type": "color",
      "id": "heading_c",
      "label": "Heading color",
      "default": "#222222"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Sub heading",
      "default": "<p>Subtitle from happy customers</p>"
    },
    {
      "type": "color",
      "id": "subheading_c",
      "label": "Sub heading color",
      "default": "#666666"
    },
    {
      "type": "select",
      "id": "title_alignment",
      "label": "Heading alignment",
      "default": "text-left",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ]
    },
    {
      "type":  "header",
      "content": "Image item per row"
    },
    {
      "type": "range",
      "id": "grid_number",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Images per row large desktop",
      "default": 3,
      "info": "Breakpoint 1200px ↑"
    },
    {
      "type": "range",
      "id": "grid_number_lg",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Images per row desktop",
      "default": 3,
      "info": "Breakpoint 1199px ↓"
    },
    {
      "type": "range",
      "id": "grid_number_md",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Images per row tablet",
      "default": 3,
      "info": "Breakpoint 991px ↓"
    },
    {
      "type": "range",
      "id": "grid_number_sm",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Images per row mobile",
      "default": 2,
      "info": "Breakpoint 767px ↓"
    },
    {
      "type": "range",
      "id": "grid_number_xs",
      "min": 1,
      "max": 6,
      "step": 1,
      "label": "Images per row small mobile",
      "default": 1,
      "info": "Breakpoint 575px ↓"
    },
    {
      "type": "header",
      "content": "Design options"
    },
    {
      "type": "checkbox",
      "id": "has_fullwidth",
      "label": "Full width",
      "default": false
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background colors"
    },
    {
      "type": "text",
      "id": "class",
      "label": "Class"
    },
    {
      "type": "number",
      "id": "distance_top",
      "label": "Top spacing section (px)",
      "default": 30
    },
    {
      "type": "number",
      "id": "distance_bottom",
      "label": "Bottom spacing section (px)",
      "default": 30
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Vinova Gallery Instagram",
      "category": "Image",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
<style>
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ section.settings.distance_top }}px;
    padding-bottom: {{ section.settings.distance_bottom }}px;
    {% if section.settings.background_color != blank %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
  }
</style>