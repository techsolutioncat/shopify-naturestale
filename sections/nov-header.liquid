<div data-section-id="{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  <header class="site-header{% if section.settings.stickymenu == true %} sticky-menu{% endif %}">
    <div class="header-mobile d-md-none">
      <div class="d-flex align-items-center">
        {% if section.settings.vertical_menu %}
          <div class="btn_ver color_heading">
            <i class="zmdi zmdi-sort-amount-asc"></i>
          </div>
        {% endif %}
        <div class="mobile_logo">
          {% if section.settings.logo_mobile %}
          <a href="/" class="site-header__logo-image img-fluid">
            {%- assign image_size = section.settings.wm_logo | append: 'x' -%}
            <img srcset="{{ section.settings.logo_mobile | img_url: image_size }} 1x, {{ section.settings.logo_mobile | img_url: image_size, scale: 2 }} 2x"
              src="{{ section.settings.logo_mobile | img_url: image_size }}"
              loading="lazy"
              width="{{ section.settings.logo_mobile.width }}"
              height="{{ section.settings.logo_mobile.height }}"
              alt="{{ section.settings.logo_mobile.alt | default: shop.name | escape }}"
              style="height: auto">
          </a>
          {% else %}
          <a class="site-header__logo-link" href="/" itemprop="url">{{ shop.name }}</a>
          {% endif %}
        </div>
        <div id="mobile_search">
          {% include 'nov-formsearch-inline' %}
        </div>
        <div class="d-flex justify-content-end">
          <div id="show-megamenu" class="item-mobile-top"><i class="zmdi zmdi-view-headline"></i></div>
        </div>
      </div> 
    </div>
    <div class="header-center d-none d-md-block position-relative">
      <div class="container">
        <div class="row">
          <div class="contentsticky_logo col-xl-3 col-lg-2 col-md-3 d-flex align-items-center pt-35 pb-35">
            <div class="btn_toggle_nav d-lg-none d-md-block">
              <i class="fa fa-bars" aria-hidden="true"></i>
            </div>
            {% if section.settings.logo %}
              <a href="/" class="site-header__logo d-inline-block img-fluid position-relative">
                {%- assign image_size = section.settings.w_logo | append: 'x' -%}
                <img srcset="{{ section.settings.logo | img_url: image_size }} 1x, {{ section.settings.logo | img_url: image_size, scale: 2 }} 2x"
                  src="{{ section.settings.logo | img_url: image_size }}"
                  loading="lazy"
                  width="{{ section.settings.logo.width }}"
                  height="{{ section.settings.logo.height }}"
                  alt="{{ section.settings.logo.alt | default: shop.name | escape }}"
                  style="height: auto;">
              </a>
            {% else %}
              <div class="h2 site-header__logo d-inline-block mb-0 position-relative"><a class="site-header__logo-link" href="/" itemprop="url">{{ shop.name }}</a></div>
            {% endif %}
          </div>
          <div class="contentsticky_menu col-lg-6 col-md-3 text-lg-center position-static">
            <nav id="AccessibleNav">{% include 'site-nav' %}</nav>
          </div>
          <div class="col-xl-3 col-lg-4 col-md-6 d-flex align-items-center justify-content-end">
            <div class="search__btn-overlay"></div>
            <div class="contentsticky_account">
              {% if settings.account_type == 'dropdown' %}
                <div class="site-header_myaccount dropdown">
                  <div class="myaccount-title dropdown-toggle text-center d-flex" data-toggle="dropdown">
                    <a class="myaccount" href="{{ shop.secure_url }}/account" rel="nofollow" title="{{ 'layout.customer.account' | t }}">
                      <i class="fa fa-bars" aria-hidden="true"></i>
                    </a>
                  </div>
                  {% include 'nov-block-account' %}
                </div>
              {% else %}
                <div class="site-header_myaccount account_canvas">
                  <div class="myaccount" title="{{ 'layout.customer.account' | t }}">
                    <i class="icon-settings"></i>
                  </div>
                </div>
              {% endif %}
            </div>
            <div class="contentsticky_cart">
              <div class="{% if settings.mini_cart_type == 'canvas' %}cart_canvas{% else %}cart_dropdown{% endif %}">
                <div id="cart_block">
                  <div class="header-cart d-flex align-items-center">
                    <div class="site-header__cart">
                      <span class="site-header__cart-icon"></span>
                      <span id="_desktop_cart_count" class="site-header__cart-count">
                        <span id="CartCount">{{ cart.item_count }}</span>
                      </span>
                    </div>
                  </div>
                  {% if settings.mini_cart_type != 'canvas' %}<div id="_desktop_cart"><div id="cart-info"></div></div>{% endif %}
                </div>
              </div>
            </div>
            {% if section.settings.order != blank %}
              <a class="order_btn font-700 text-uppercase" href="{{ section.settings.order_link }}">{{ section.settings.order }}</a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
  </header>

  {% if section.settings.stickymenu == true %}
    <div id="header-sticky" class="d-none d-md-block"{% if section.settings.background_color != blank %} style="background-color: {{ section.settings.background_color_sticky }};"{% endif %}>
      <div class="container">
        <div class="bl_content row align-items-center">
          <div class="contentstickynew_logo col-2"></div>
          <div class="contentstickynew_menu col-8 position-static text-center"></div>
          <div class="contentstickynew_cart col-2">
          </div>
        </div>
      </div>
    </div>
  {% endif %}
