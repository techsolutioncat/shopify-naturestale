{% style %}
  #shopify-section-{{ section.id }} .section-content {
    margin-top: -190px;
    {%- if section.settings.background_image != blank -%}
      background-image: url('{{ section.settings.background_image | image_url: width: 2000 }}');
      background-size: cover;
    {%- endif -%}
  }
  #shopify-section-{{ section.id }} .section-content .section-main-content {
    display: flex;
    min-height: 900px;
    align-items: center;
  }
  #shopify-section-{{ section.id }} .section-content .half-width {
    width: 50%;
  }
  #shopify-section-{{ section.id }} .text-box .heading {
    color: {{ section.settings.heading_color }};
    line-height: 70px;
  }
  #shopify-section-{{ section.id }} .text-box .text {
    color: {{ section.settings.text_color }};
    line-height: 30px;
    margin-top: 50px;
  }
  #shopify-section-{{ section.id }} .second-box .second-heading {
    color: {{ section.settings.second_heading_color }};
    line-height: 44px;
  }
  #shopify-section-{{ section.id }} .second-box .second-text {
    color: {{ section.settings.second_text_color }};
    line-height: 24px;
    margin-top: 25px;
  }
  #shopify-section-{{ section.id }} .second-item-box .item-box {
    color: {{ section.settings.second_textlist_color }}
  }
  #shopify-section-{{ section.id }} .second-item-box .item {
    color: {{ section.settings.second_textlist_color }};
    width: 50%;
    margin-bottom: 10px;
  }
  #shopify-section-{{ section.id }} .second-item-box {
    display: flex;
    flex-wrap: wrap;
    margin-top: 13px;
  }
  #shopify-section-{{ section.id }} .main-box {
    position: relative;
    display: flex;
    justify-content: center;
  }
  #shopify-section-{{ section.id }} .second-textbox {
    {%- if section.settings.second_image != blank -%}
      background-image: url("{{ section.settings.second_image | image_url: width: 800 }}");
    {%- endif -%}
    height: 560px;
    width: 575px;
    padding: 50px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    Background-size: cover;
    background-repeat: no-repeat;
    background-position-x: center;
    background-position-y: center;
  }
  #shopify-section-{{ section.id }} .section-button {
    margin-top: 45px;
  }
  @media (max-width: 1400px) {
    #shopify-section-{{ section.id }} .second-textbox {
      height: 536px;
    }
  }

  @media (max-width: 1200px) {
    #shopify-section-{{ section.id }} .section-content .section-main-content {
      flex-direction: column;
      padding-top: 120px;
      padding-bottom: 120px;
    }
    #shopify-section-{{ section.id }} .section-content .half-width {
      width: 100%;
    }
    #shopify-section-{{ section.id }} .section-content .text-box {
      margin-bottom: 50px;
      text-align: center;
    }
    #shopify-section-{{ section.id }} .text-box .text {
      margin-top: 0px;
    }
    #shopify-section-{{ section.id }} .second-textbox {
      height: 560px;
    }
  }
  @media (max-width: 999px) {
    #shopify-section-{{ section.id }} .text-box .heading {
      color: {{ section.settings.mob_heading_color }};
      line-height: 40px;
      margin-bottom: 20px;
    }
    #shopify-section-{{ section.id }} .text-box .text {
      color: {{ section.settings.mob_text_color }};
      line-height: 22px;
    }
    #shopify-section-{{ section.id }} .text-box {
      background: #fff;
      padding: 25px;
    }
  }
  @media (max-width: 767px) {
    #shopify-section-{{ section.id }} .second-textbox {
      height: 100%;
      width: 100%;
    }
    #shopify-section-{{ section.id }} .section-content {
      margin-top: -160px;
      padding-bottom: 90px;
    }
    #shopify-section-{{ section.id }} .second-textbox {
      {%- if section.settings.mob_background_image != blank -%}
        background-image: url("{{ section.settings.mob_background_image | image_url: width: 500 }}");
      {%- endif -%}
    }
  }
  @media (max-width: 500px) {
    #shopify-section-{{ section.id }} .second-item-box {
      flex-direction: column;
      width: 100%;
    }
    #shopify-section-{{ section.id }} .second-item-box .item {
      width: 100%;
    }
  }
{% endstyle %}

<div class="section-content">
  <div class="container">
    <div class="section-main-content">
      <div class="half-width text-box">
        {% if section.settings.heading != blank %}
          <div class="heading h2 font-700">{{ section.settings.heading }}</div>
        {% endif %}
        {% if section.settings.text != blank %}
          <div class="text h6 font-400">{{ section.settings.text }}</div>
        {% endif %}
        <div class="section-button">
          {% if section.settings.button_text != blank %}
            <a
              class="font-700 text-uppercase font-700 hero-button site-button button_L"
