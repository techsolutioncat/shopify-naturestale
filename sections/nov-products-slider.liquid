<div class="distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}" data-section-id="{{ section.id }}" data-section-type="nov-slick">
  {% if section.settings.has_fullwidth == false %}
    <div class="container">
  {% else %}
    <div class="container-fluid">
  {% endif %}
    {%- assign collection = collections[section.settings.collection] -%}
    {% if section.settings.heading != blank %}
      <div class="title_section {{ section.settings.title_alignment }}">
        <span class="title" style="color: {{ section.settings.heading_c }};">{{ section.settings.heading }}</span>
        {% if section.settings.subheading != blank %}
          <span class="sub_title" style="color: {{ section.settings.subheading_c }};">{{ section.settings.subheading }}</span>
        {% endif %}
      </div>
    {% endif %}
    {% comment %} product slider {% endcomment %}
    {%- assign product_limit = section.settings.limit -%}
    <div class="grid--view-items nov-slick-carousel b_margin row{% if section.settings.show_dot == true %} pb-30{% endif %}"
      data-autoplay="false" 
      data-autoplayTimeout="6000" 
      data-loop="false"
      data-dots="false" 
      data-nav="{{ section.settings.show_nav }}" 
      data-row="{{ section.settings.row_number }}" 
      data-row_mobile="{{ section.settings.row_mobile }}"
      data-items="{{ section.settings.grid_number }}" 
      data-items_lg="{{ section.settings.grid_number_lg }}" 
      data-items_md="{{ section.settings.grid_number_md }}" 
      data-items_sm="{{ section.settings.grid_number_sm }}"
      data-items_xs="{{ section.settings.grid_number_xs }}">
      {% for product in collection.products limit: product_limit %}
        <div class="block">
          <div>
            <div class="item col">
              {% include 'product-card-grid' %}
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    {% comment %} end product slider {% endcomment %}
  </div>
</div>
{% schema %}
  {
    "name": "Vinova Products Slider",
    "class": "index-section section-product-slider wow fadeInUp animated",
    "settings": [
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading",
        "default": "<p>Vinova Product Slider</p>"
      },
      {
        "type": "color",
        "id": "heading_c",
        "label": "Heading color",
        "default": "#222222"
      },
      {
        "type": "richtext",
        "id": "subheading",
        "label": "Sub heading",
        "default": "<p>Subtitle from happy customers</p>"
      },
      {
        "type": "color",
        "id": "subheading_c",
        "label": "Sub heading color",
        "default": "#666666"
      },
      {
        "type": "select",
        "id": "title_alignment",
        "label": "Heading alignment",
        "default": "text-left",
        "options": [
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      },
      {
        "type":  "header",
        "content": "Product item per row"
      },
      {
        "type": "range",
        "id": "grid_number",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Products per row large desktop",
        "default": 3,
        "info": "Breakpoint 1200px ↑"
      },
      {
        "type": "range",
        "id": "grid_number_lg",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Products per row desktop",
        "default": 3,
        "info": "Breakpoint 1199px ↓"
      },
      {
        "type": "range",
        "id": "grid_number_md",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Products per row tablet",
        "default": 3,
        "info": "Breakpoint 991px ↓"
      },
      {
        "type": "range",
        "id": "grid_number_sm",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Products per row mobile",
        "default": 2,
        "info": "Breakpoint 767px ↓"
      },
      {
        "type": "range",
        "id": "grid_number_xs",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Products per row small mobile",
        "default": 2,
        "info": "Breakpoint 575px ↓"
      },
      {
        "type": "range",
        "id": "limit",
        "min": 4,
        "max": 30,
        "step": 1,
        "label": "Limit",
        "default": 30,
        "info": "Select number limit products"
      },
      {
        "type":  "header",
        "content": "Slider options"
      },
      {
        "type": "range",
        "id": "row_number",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Number row",
        "default": 1
      },
      {
        "type": "range",
        "id": "row_mobile",
        "min": 1,
        "max": 6,
        "step": 1,
        "label": "Number row mobile",
        "default": 1
      },
      {
        "type": "checkbox",
        "id": "show_nav",
        "label": "Show navigation",
        "default": false
      },
      {
        "type":  "header",
        "content": "Design option"
      },
      {
        "type": "checkbox",
        "id": "has_fullwidth",
        "label": "Full width",
        "default":   false
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background colors"
      },
      {
        "type": "image_picker",
        "id": "background_image",
        "label": "Background image"
      },
      {
        "type": "text",
        "id": "class",
        "label": "Class"
      },
      {
        "type": "number",
        "id": "distance_top",
        "label": "Top spacing section (px)",
        "default": 30
      },
      {
        "type": "number",
        "id": "distance_bottom",
        "label": "Bottom spacing section (px)",
        "default": 30
      }
    ],
    "presets": [
      {
        "name": "Vinova Products Slider",
        "category": "Collection"
      }
    ]
  }
{% endschema %}
{%- assign bg_image = section.settings.background_image -%}
<style>
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ section.settings.distance_top }}px;
    padding-bottom: {{ section.settings.distance_bottom }}px;
    {% if section.settings.background_color != blank %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
    {% if bg_image.src != blank %}
      background-image: url("{{ bg_image | img_url: '1920x' }}");
      background-repeat: no-repeat;
      background-position: center top;
    {% endif %}
  }
</style>