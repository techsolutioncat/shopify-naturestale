<style>
  {%- assign bg_image = section.settings.background_image -%}
  #shopify-section-{{ section.id }} .distance {
    padding-top: {{ section.settings.distance_top }}px;
    padding-bottom: {{ section.settings.distance_bottom }}px;
    {% if section.settings.background_color != blank %}
      background-color: rgba({{ section.settings.background_color | color_to_rgb | remove: 'rgb(' | remove: 'rgba(' | remove: ')' | remove: ', 0.0' }}, {{ section.settings.bg_opacity }}%);
    {% endif %}
    {% if bg_image.src != blank %}
      background-image: url("{{ bg_image | img_url: '1920x' }}");
      background-position: center;
      background-size: cover;
    {% endif %}
  }
  #shopify-section-{{ section.id }} .title-policy {
    color: {{ section.settings.text_color }};
  }
  #shopify-section-{{ section.id }} .desc-policy {
    color: {{ section.settings.desc_color }};
