<div class="distance{% if section.settings.class != blank %} {{ section.settings.class }}{% endif %}">
  {% if section.settings.has_fullwidth == false %}
    <div class="container">
  {% else %}
    <div class="container-fluid">
  {% endif %}
    {% if section.settings.heading != blank %}
      <div class="title_section {{ section.settings.title_alignment }} mb-100 mb-lg-50">
        <span class="title" style="color: {{ section.settings.heading_c }};">{{ section.settings.heading }}</span>
        {% if section.settings.subheading != blank %}
          <span class="sub_title mt-70 mt-lg-50" style="color: {{ section.settings.subheading_c }};">{{ section.settings.subheading }}</span>
        {% endif %}
      </div>
    {% endif %}

    {% if section.blocks.size > 0 %}
      <div class="nov-policy">
        <div class="row">
          {% for block in section.blocks %}
            <div class="nov-policy-item pt-80 pt-xl-50 pt-md-20 pb-80 pb-xl-50 pb-md-20 text-center {{ section.settings.width_xl }} {{ section.settings.width_lg }} {{ section.settings.width_md }} {{ section.settings.width_sm }} {{ section.settings.width_xs }}{% if block.settings.class != blank %} {{ block.settings.class }}{% endif %}">
              <div class="bl_img mb-30"><img class="lazyload" data-src="{{ block.settings.policy_icon | img_url: '120x' }}" alt="icon_policy"></div>
              <div class="bl_content">
                <div class="title-policy font-700 mb-20">{{ block.settings.title_policy }}</div>
                <div class="desc-policy d-inline-block">{{ block.settings.desc_policy }}</div>
              </div>
            </div>  
          {% endfor %}
        </div>
      </div>
    {% endif %}
  </div>
</div>
