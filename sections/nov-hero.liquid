    {
      "type": "url",
      "id": "button_link",
      "label": "Button text"
    },
    {
      "type": "text",
      "id": "nav_text",
      "label": "Text",
      "default": "Nav text"
    },
    {
      "type": "color",
      "id": "nav-text_color",
      "label": "Text color",
      "default": "#fff"
    }
  ],
  "presets": [
    {
      "name": "Vinova Hero"
    }
  ]
}
{% endschema %}

<script>
  {% comment %} $('#shopify-section-{{ section.id }} .background-video video').on('loadstart', function () {
    setTimeout(function () {
      $('#shopify-section-{{ section.id }} .circle-loader').addClass('hide');
    }, 2000);
  }); {% endcomment %}
</script>