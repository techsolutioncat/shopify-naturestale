{% style %}
  #shopify-section-{{ section.id }} .section-content.h_L {
    min-height: 860px;
    height: 100vh;
  }
  #shopify-section-{{ section.id }} .section-content.h_M {
    height: 80vh;
    min-height: 680px;
  }
  #shopify-section-{{ section.id }} .section-content.h_S {
    height: 70vh;
    min-height: 500px;
  }
  #shopify-section-{{ section.id }} .section-content {
    position: relative;
  }
  #shopify-section-{{ section.id }} .background-video,
  #shopify-section-{{ section.id }} .background-video video
  {
    width: 100%;
    height: 100% !important;
    object-fit: cover;
    position: absolute;
    z-index: -1;
  }
  #shopify-section-{{ section.id }} .section-content .page-width {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    gap: 30px;
  }
  #shopify-section-{{ section.id }} .section-content .top-title {
    color: {{ section.settings.top_title_color }};
  }
  #shopify-section-{{ section.id }} .section-content .heading {
    color: {{ section.settings.heading_color }};
  }
  #shopify-section-{{ section.id }} .link-wrap {
    /* background-image: url({{ 'circle.png' | asset_url }});
    background-size: contain;
    background-repeat: no-repeat; */
    position: relative;
    min-width: 314px;
    min-height: 314px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }

  #shopify-section-{{ section.id }} .nav-text {
    color: {{ section.settings.nav-text_color }};
    margin-top: 25px;
  }
  #shopify-section-{{ section.id }} .section-content {
    margin-bottom: 60px;
  }

  /* Begin loading style */
  #shopify-section-{{ section.id }} .circle-loader {
    margin: 0 0 30px 10px;
    border: 1px solid #D9D9D9;
    position: absolute;
  }
  #shopify-section-{{ section.id }} .status{
    border: 2px solid #fff;
    border-top-color: transparent;
    border-right-color: transparent;
    border-bottom-color: transparent;
    animation-name: loader-spin;
    animation-duration: 10s;
    animation-iteration-count: infinite;
    animation-timing-function: linear;
    position: relative;
    display: inline-block;
    vertical-align: top;
    margin-left: -2px;
    margin-top: -2px;
  }
  #shopify-section-{{ section.id }} .circle-loader,
  #shopify-section-{{ section.id }} .status {
    border-radius: 50%;
    min-width: 314px;
    min-height: 314px;
  }

  #shopify-section-{{ section.id }} .status::before {
    position: absolute;
    top: 42px;
    left: 42px;
    content: "";
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background-color: #fff;
  }

  @keyframes loader-spin {
      0% {
          transform: rotate(0deg);
      }

      100% {
          transform: rotate(360deg);
      }
  }

  @keyframes checkmark {
      0% {
          height: 0;
          width: 0;
          opacity: 1;
      }

      20% {
          height: 0;
          width: 2em;
          opacity: 1;
      }

      40% {
          height: 4em;
          width: 2em;
          opacity: 1;
      }

      100% {
          height: 4em;
          width: 2em;
          opacity: 1;
      }
  }

  @keyframes crossmark {
      0% {
          height: 0;
          width: 0;
          opacity: 1;
      }

      20% {
          height: 0;
          width: 2em;
          opacity: 1;
      }

      40% {
          height: 2em;
          width: 2em;
          opacity: 1;
      }

      100% {
          height: 2em;
          width: 2em;
          opacity: 1;
      }
  }
  /* End loading style */

  @media(max-width: 999px) {
    #shopify-section-{{ section.id }} .section-content.h_L {
      min-height: 650px;
    }
    #shopify-section-{{ section.id }} .section-content.h_M {
      min-height: 450px;
    }
    #shopify-section-{{ section.id }} .section-content.h_S {
      min-height: 380px;
    }
    #shopify-section-{{ section.id }} .link-wrap,
    #shopify-section-{{ section.id }} .circle-loader,
    #shopify-section-{{ section.id }} .status {
      min-width: 250px;
      min-height: 250px;
    }
    #shopify-section-{{ section.id }} .status::before {
      top: 33px;
      left: 33px;
    }
  }
  @media(max-width: 500px) {
    #shopify-section-{{ section.id }} .section-content.h_L {
      min-height: 490px;
    }
    #shopify-section-{{ section.id }} .section-content.h_M {
      min-height: 450px;
    }
    #shopify-section-{{ section.id }} .section-content.h_S {
      min-height: 400px;
    }
    #shopify-section-{{ section.id }} .link-wrap,
    #shopify-section-{{ section.id }} .circle-loader,
    #shopify-section-{{ section.id }} .status {
      min-width: 200px;
      min-height: 200px;
    }
    #shopify-section-{{ section.id }} .status::before {
      top: 25px;
      left: 25px;
    }
    #shopify-section-{{ section.id }} .section-content .page-width {
      gap: 18px;
    }
    #shopify-section-{{ section.id }} .section-content .title-box {
      margin-top: 125px;
    }
  }
{% endstyle %}

<div class="section-content {{ section.settings.background_height }}">
  {% if section.settings.video_url != blank %}
    <div class="background-video">
      <video playsinline autoplay loop muted style="width: 100%;max-width: 100%; height: auto;">
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    </div>
  {% endif %}
  <div class="page-width container">
    <div class="title-box">
      {% if section.settings.top_title != blank %}
        <div class="top-title h4">{{ section.settings.top_title }}</div>
      {% endif %}
      {% if section.settings.heading != blank %}
        <div class="heading h1">{{ section.settings.heading }}</div>
      {% endif %}
    </div>
    <div class="link-wrap">
      <div class="circle-loader">
        <div class="status draw"></div>
      </div>
      <div class="hero-button-group">
        {% if section.settings.button_text != blank %}
          <a
            class="font-700 text-uppercase font-700 hero-button site-button button_L"
            href="{{ section.settings.button_link }}"
          >
            {{- section.settings.button_text -}}
          </a>
        {% endif %}
        {% if section.settings.nav_text != blank %}
          <p class="nav-text h6 font-300">{{ section.settings.nav_text }}</p>
        {% endif %}
      </div>
    </div>
  </div>
</div>

