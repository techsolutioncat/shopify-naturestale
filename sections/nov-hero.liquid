    },
    {
      "type": "header",
      "content": "Text settings"
    },
    {
      "type": "text",
      "id": "top_title",
      "label": "Top title",
      "default": "Top title"
    },
    {
      "type": "color",
      "id": "top_title_color",
      "label": "Top title color",
      "default": "#fff"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading",
      "default": "<p>Vinova Hero</p>"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading color",
      "default": "#fff"
    },
    {
      "type": "header",
      "content": "Button settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Button"
