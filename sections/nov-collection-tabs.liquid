<style>
	#shopify-section-{{ section.id }} .distance {
		padding-top: {{ section.settings.distance_top }}px;
		padding-bottom: {{ section.settings.distance_bottom }}px;
		{%- assign bg_image = section.settings.background_image -%}
		{% if section.settings.background_color != blank %}
			background-color: {{ section.settings.background_color }};
		{% endif %}
		{% if bg_image.src != blank %}
			background-image: url("{{ bg_image | img_url: '1920x' }}");
			background-repeat: no-repeat;
			background-position: center top;
			background-size: cover;
		{% endif %}
	}
	{% if section.settings.bgi_nav != blank %}
		#shopify-section-{{ section.id }} .nav-link {
			background-image: url("{{ section.settings.bgi_nav | img_url: '150x' }}");
		}
	{% endif %}
	{% if section.settings.bgi_nav_h != blank %}
		#shopify-section-{{ section.id }} .nav-tabs .nav-link:hover, #shopify-section-{{ section.id }} .nav-tabs .nav-link.active {
			background-image: url("{{ section.settings.bgi_nav_h | img_url: '150x' }}");
		}
	{% endif %}
	#shopify-section-{{ section.id }} .nav-tabs .nav-link {
		color: {{ section.settings.c_nav }};
	}
</style>