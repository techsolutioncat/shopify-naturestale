                  {% if block.settings.block_title != blank %}
                  <div class="title-block">
                    {{ block.settings.block_title }}
                    <span class="f_btn_sl d-sm-none"><i class="zmdi zmdi-plus"></i></span>
                  </div>
                  {% endif %}
                  <div class="block-content{% if block.settings.block_title != blank %} h_t pb-xs-30{% endif %}">
                    {% if block.settings.contact_address != blank %}
                    <div class="contact d-flex align-items-center">
                      <div class="icon-contact">
                        <i class="zmdi zmdi-pin"></i>
                      </div>
                      <div class="address-content">
                        <div class="content-address">{{ block.settings.contact_address }}</div>
                      </div>
                    </div>
                    {% endif %}
                    {% if block.settings.contact_phone != blank %}
                    <div class="contact d-flex align-items-center">
                      <div class="icon-contact">
                        <i class="zmdi zmdi-phone-in-talk"></i>
                      </div>
                      <div class="phone-content">
                        <div class="number">{{ block.settings.contact_phone }}</br>{{ block.settings.contact_phone_2 }}</div>
                      </div>
                    </div>
                    {% endif %}
                    {% if block.settings.contact_email != blank %}
