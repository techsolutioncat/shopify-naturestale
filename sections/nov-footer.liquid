<footer>
  {% if section.settings.contactform %}
    <div class="footer-contactform">
      <div class="container">
        <div class="row justify-content-end">
          <div class="contact-form form-vertical col-xl-6 col-lg-8 col-md-10">
            {% if section.settings.title_contact != blank %}
              <div class="title_block">
                {{ section.settings.title_contact }}
                {% if section.settings.sub_title_contact != blank %}
                <div class="sub_title">
                  {{ section.settings.sub_title_contact }}
                </div>
                {% endif %}
              </div>
            {% endif %}
            {% form 'contact' %}
              {% if form.posted_successfully? %}
                <p class="note form-success">
                  {{ 'contact.form.post_success' | t }}
                </p>
              {% endif %}
              {{ form.errors | default_errors }}
              <div class="form-group row spacing-10">
                <div class="col-md-6 mb-xs-10">
                  <input type="text" id="ContactFormName" name="contact[name]" value="{% if form[name] %}{{ form[name] }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="YOUR NAME">
                </div>
                <div class="col-md-6">
                  <input type="email" id="ContactFormEmail" name="contact[email]" autocorrect="off" autocapitalize="off" value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}" class="{% if form.errors contains 'email' %}input--error{% endif %}" placeholder="YOUR EMAIL">
                </div>
              </div>

              <div class="form-group row">
                <div class="col-md-12">
                  <input class="mb-0" type="text" id="ContactFormSubject" name="contact[subject]" value="{% if form[subject] %}{{ form[subject] }}{% elsif customer %}{{ customer.name }}{% endif %}" placeholder="SUBJECT">
                </div>
              </div>

              <div class="form-group row mb-20">
                <div class="col-md-12">
                  <textarea rows="10" id="ContactFormMessage" name="contact[body]" placeholder="MESSAGE">{% if form.body %}{{ form.body }}{% endif %}</textarea>
                </div>
              </div>

              
              <button type="submit" class="btn"><i class="icon-buttonform mr-15"></i>{{ 'contact.form.submit' | t }}</button>
            {% endform %}
          </div>
        </div>
      </div>
    </div>
  {% endif %}
  <div class="footer-layout pt-80 pb-30">
    <div class="container">
      {% if section.settings.newsletter == true %}
        <div class="block_newsletter footer_newsletter">
          {% if section.settings.newsletter_title != blank %}
            <div class="title_section text-center">
              <div class="title"><strong>{{ section.settings.newsletter_title }}</strong></div>
              {% if section.settings.newsletter_des != blank %}
                <div class="sub_title">{{ section.settings.newsletter_des }}</div>
              {% endif %}
            </div>
          {% endif %}
          {% form 'customer' %}
            {{ form.errors | default_errors }}
            {% if form.posted_successfully? %}
              <p class="form--success">{{ 'general.newsletter_form.confirmation' | t }}</p>
            {% else %}
              <div class="input-group">
                <input type="hidden" name="contact[tags]" value="newsletter">
                <input type="email"
                  name="contact[email]"
                  id="Email_Footer"
                  class="input-group__field newsletter__input form-control"
                  value="{% if customer %}{{ customer.email }}{% endif %}"
                  placeholder="{{ 'general.newsletter_form.email_newsletter' | t }}">
                  <button type="submit" class="btn newsletter__submit" name="commit">
                    {{ 'general.newsletter_form.submit' | t }}
                  </button>
              </div>
            {% endif %}
          {% endform %}
        </div>
      {% endif %}
      {% if section.blocks.size > 0 %}
        <div class="row pt-45">
          {% for block in section.blocks %}
            {% if block.type == 'block_contact' %}
              <div class="footer_contact block_footer{% if block.settings.block_title != blank %} mt-xs-0 mb-xs-0{% endif %} {{ block.settings.grid_xl }} {{ block.settings.grid_lg }} {{ block.settings.grid_md }} {{ block.settings.grid_sm }}{% if block.settings.block_class != blank %} {{ block.settings.block_class }}{% endif %}">
