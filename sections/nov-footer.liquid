                      <div class="icon-contact">
                        <i class="zmdi zmdi-email"></i>
                      </div>
                      <div class="email-content">
                        <div class="email">{{ block.settings.contact_email }}</br>{{ block.settings.contact_email_2 }}</div>
                      </div>
                    </div>
                    {% endif %}
                    {% if block.settings.img != blank %}
                      <img class="lazyload mt-40" data-src="{{ block.settings.img | img_url: '300x' }}">
                    {% endif %}
                  </div>
